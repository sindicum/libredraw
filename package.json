{
  "name": "@sindicum/libre-draw",
  "version": "0.1.1",
  "description": "MapLibre GL JS polygon drawing and editing library",
  "type": "module",
  "main": "./dist/libre-draw.cjs",
  "module": "./dist/libre-draw.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/libre-draw.js",
      "require": "./dist/libre-draw.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite examples/basic",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "maplibre-gl": ">=3.0.0"
  },
  "dependencies": {
    "@turf/boolean-point-in-polygon": "^7.0.0",
    "@turf/helpers": "^7.0.0",
    "rbush": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/rbush": "^4.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "happy-dom": "^20.7.0",
    "maplibre-gl": "^4.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitepress": "^1.6.4",
    "vitest": "^3.0.0",
    "vue": "^3.5.29"
  },
  "keywords": [
    "maplibre",
    "maplibre-gl",
    "draw",
    "polygon",
    "geojson",
    "map",
    "gis"
  ],
  "license": "MIT",
  "author": "Sindicum",
  "repository": {
    "type": "git",
    "url": "https://github.com/sindicum/libre-draw.git"
  },
  "homepage": "https://sindicum.github.io/libre-draw/",
  "bugs": {
    "url": "https://github.com/sindicum/libre-draw/issues"
  }
}
